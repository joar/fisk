function auto_node_modules_bin --on-variable PWD \
    --description 'Automatically add $PWD/node_modules/.bin to path'
    status --is-command-substitution; and return
    set -l git_root (pwd)"/"(git rev-parse --show-cdup ^ /dev/null)

    if test ! "$status" -eq 0
        __remove_node_modules_bin_path
        return
    end

    set -l bin_path $git_root"node_modules/.bin"

    if begin; test ! -z "$bin_path"; and test ! -d "$bin_path"; end
        return
    end

    set -g __node_modules_bin_path $bin_path
    set -gx PATH $__node_modules_bin_path $PATH
end

# Private function, used to clean up $PATH
function __remove_node_modules_bin_path
    if contains $__node_modules_bin_path $PATH
        set -l restored_PATH

        for path in $PATH
            if not test $path = $__node_modules_bin_path
                set restored_PATH $restored_PATH $path
            end
        end

        set -gx PATH $restored_PATH
    end
end
